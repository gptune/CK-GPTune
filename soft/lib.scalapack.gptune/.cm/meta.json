{
  "auto_detect": "yes",
  "customize": {
    "add_include_path": "yes",
    "check_that_exists": "yes",
    "ck_version": 10,
    "env_prefix": "CK_ENV_LIB_SCALAPACK",
    "limit_recursion_dir_search": {
      "linux": 5,
      "win": 5
    },
    "soft_file": {
      "linux": "libscalapack$#file_ext_dll#$",
      "win": "libscalapack.lib"
    }
  },
  "soft_name": "SCALAPACK library",
  "tags": [
    "lib",
    "scalapack"
  ]
}
